{
    "name": "siyuan-kmind",
    "private": true,
    "version": "1.0.0",
    "type": "commonjs",
    "scripts": {
        "make-link": "node ./scripts/make_dev_link.mjs",
        "dev": "vite",
        "ad-dev": "vite build --watch --mode dev",
        "build": "vue-tsc && vite build",
        "preview": "vite preview",
        "eslint-comment": "使用eslint检查代码并自动修复src目录下所有拓展名为.js .vue的文件",
        "eslint": "eslint --ext .js,.ts,.vue --ignore-path .eslintignore --fix src",
        "lint:eslint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
        "prettier:comment": "使用prettier格式化代码当前目录的所有文件",
        "prettier": "prettier --write",
        "prepare": "husky install",
        "lint:lint-staged": "lint-staged"
    },
    "dependencies": {
        "@ant-design/icons-vue": "^6.1.0",
        "@vueup/vue-quill": "^1.1.0",
        "@vueuse/core": "^9.13.0",
        "ant-design-vue": "^4.0.0",
        "axios": "^1.3.4",
        "lodash-es": "^4.17.21",
        "pinia": "^2.0.29",
        "quill": "^1.3.7",
        "semver": "^7.5.4",
        "simple-mind-map": "^0.6.6",
        "vditor": "^3.9.0",
        "vue": "^3.3.4",
        "vue-router": "^4.1.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@types/lodash-es": "^4.17.6",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.0.0",
        "@vitejs/plugin-vue": "^4.0.0",
        "@vitejs/plugin-vue-jsx": "^3.0.1",
        "@windicss/plugin-animations": "^1.0.9",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.9.0",
        "fast-glob": "^3.2.12",
        "husky": "^8.0.3",
        "less": "^4.1.3",
        "less-loader": "^11.1.0",
        "lint-staged": "^13.2.0",
        "minimist": "^1.2.8",
        "postcss": "^8.4.12",
        "postcss-html": "^1.4.1",
        "postcss-less": "^6.0.0",
        "prettier": "^2.8.3",
        "rollup-plugin-livereload": "^2.0.5",
        "siyuan": "0.7.4",
        "stylelint": "^14.7.1",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended": "^7.0.0",
        "stylelint-config-recommended-vue": "^1.4.0",
        "stylelint-config-standard": "^25.0.0",
        "stylelint-order": "^5.0.0",
        "typescript": "^4.9.3",
        "vite": "4.0.5",
        "vite-plugin-static-copy": "^0.16.0",
        "vite-plugin-windicss": "^1.8.10",
        "vite-plugin-zip-pack": "^1.0.5",
        "vue-tsc": "^1.0.11",
        "windicss": "^3.5.6"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
            "prettier --write--parser json"
        ],
        "package.json": [
            "prettier --write"
        ],
        "*.vue": [
            "eslint --fix",
            "prettier --write",
            "stylelint --fix"
        ],
        "*.{scss,less,styl,html}": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.md": [
            "prettier --write"
        ]
    }
}
